#include "Operaciones.h"

int sumar(float numero1, float numero2, float* resultadoOperacion)
{
	float resultado;
	int rtn = 0;

	if(resultadoOperacion!=NULL )
	{
		resultado=numero1+numero2;
		(*resultadoOperacion)=resultado;
		rtn = 1;
	}

	return rtn;
}
int subtract (float numero1, float numero2, float* resultadoOperacion)
{
	float resultado;
	int rtn = 0;

	if(resultadoOperacion!=NULL)
	{
		resultado=numero1-numero2;
		(*resultadoOperacion)=resultado;
		rtn = 1;
	}
	return rtn;

}
int multiplicar (float numero1, float numero2, float* resultadoOperacion)
{
	float resultado;
	int rtn = 0;

	if(resultadoOperacion!=NULL)
	{
		resultado=numero1*numero2;
		(*resultadoOperacion)=resultado;
		rtn = 1;
	}

	return rtn;
}
int dividir (float dividendo, float divisor, float* resultadoOperacion)
{
	float resultado;
	int rtn=0;

	if(divisor!=0 && resultadoOperacion!=NULL)
	{
		resultado = dividendo/divisor;
		(*resultadoOperacion) = resultado;
		rtn = 1;
	}

	return rtn;
}
int reglaTres (float numero1, float numero2, float divisor, float* resultadoOperacion)
{

	float resultado;
	float resultadoDos;
	int rtn = 0;

	if(divisor!=0 && resultadoOperacion!=NULL)
	{
		multiplicar(numero1, numero2, &resultado);
		dividir(resultado, divisor, &resultadoDos);
		(*resultadoOperacion)=resultadoDos;
		rtn = 1;
	}
	return rtn;
}
int calcVariacionPrecio(float precioIngresado, int variacionPrecio, char mensajeError[], float* precioConDescuento)
{
	int rtn;
	float variablePrecio;

	if(precioConDescuento!=NULL && mensajeError!=NULL)
	{
		reglaTres(precioIngresado, variacionPrecio, 100, &variablePrecio);
		*precioConDescuento = precioIngresado + variablePrecio;
		rtn=1;
	}
	else
	{
		printf("\n%s", mensajeError);
		rtn=0;
	}
	return rtn;
}
int convertMonedas(float monedaUno, float monedaDos, float* resultadoOperacion)
{
	int rtn =0;
	float auxiliarTasa;
	if(monedaUno>0 && monedaDos >0)
	{
		dividir(monedaUno, monedaDos, &auxiliarTasa);
		*resultadoOperacion=auxiliarTasa;
		rtn=1;
	}
	return rtn;
}

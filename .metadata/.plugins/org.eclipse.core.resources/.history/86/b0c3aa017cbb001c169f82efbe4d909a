#ifndef OPERACIONES_H_
#define OPERACIONES_H_

#include <stdio.h>
#include <stdlib.h>
#include <stdio_ext.h>

int utn_Add(float numero1, float numero2, float* resultadoOperacion);
int utn_Subtract (float numero1, float numero2, float* resultadoOperacion);
int utn_Mulptiply (float numero1, float numero2, float* resultadoOperacion);
int utn_Split(float dividendo, float divisor, float* resultadoOperacion);
int reglaTres (float numero1, float numero2, float divisor, float* resultadoOperacion);
int calcVariacionPrecio(float precioIngresado, int variacionPrecio, char mensajeError[], float* precioConDescuento);
int convertMonedas(float monedaUno, float monedaDos, float* resultadoOperacion);


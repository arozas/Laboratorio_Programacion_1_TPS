int utnRuleOfThree (float numero1, float numero2, float divisor, float* resultadoOperacion);
int utnCalcPriceVarations(float precioIngresado, int variacionPrecio, char mensajeError[], float* precioConDescuento);
int utnExchangeRate(float monedaUno, float monedaDos, float* resultadoOperacion);


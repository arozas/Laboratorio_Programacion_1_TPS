#define OPERATIONS_H_

#include <stdio.h>
#include <stdlib.h>
#include <stdio_ext.h>

int utnAdd(float numero1, float numero2, float* resultadoOperacion);
int utnSubtract (float numero1, float numero2, float* resultadoOperacion);

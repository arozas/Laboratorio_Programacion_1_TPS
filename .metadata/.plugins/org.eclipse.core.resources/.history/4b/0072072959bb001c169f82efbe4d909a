#ifndef OPERACIONES_H_
#define OPERACIONES_H_

#include <stdio.h>
#include <stdlib.h>
#include <stdio_ext.h>

int sumar(float numero1, float numero2, float* resultadoOperacion);
int restar (float numero1, float numero2, float* resultadoOperacion);
int multiplicar (float numero1, float numero2, float* resultadoOperacion);
int dividir (float dividendo, float divisor, float* resultadoOperacion);
int reglaTres (float numero1, float numero2, float divisor, float* resultadoOperacion);
int calcVariacionPrecio(float precioIngresado, int variacionPrecio, char mensajeError[], float* precioConDescuento);


#endif /* OPERACIONES_H_ */

#include "Operations.h"

int operations_Add(float numero1, float numero2, float* resultadoOperacion)
{
	float resultado;
	int rtn = 0;

	if(resultadoOperacion!=NULL )
	{
		resultado=numero1+numero2;
		(*resultadoOperacion)=resultado;
		rtn = 1;
	}

	return rtn;
}
int operations_Subtract(float numero1, float numero2, float* resultadoOperacion)
{
	float resultado;
	int rtn = 0;

	if(resultadoOperacion!=NULL)
	{
		resultado=numero1-numero2;
		(*resultadoOperacion)=resultado;
		rtn = 1;
	}
	return rtn;

}
int operations_Mulptiply (float numero1, float numero2, float* resultadoOperacion)
{
	float resultado;
	int rtn = 0;

	if(resultadoOperacion!=NULL)
	{
		resultado=numero1*numero2;
		(*resultadoOperacion)=resultado;
		rtn = 1;
	}

	return rtn;
}
int operations_Split(float dividendo, float divisor, float* resultadoOperacion)
{
	float resultado;
	int rtn=0;

	if(divisor!=0 && resultadoOperacion!=NULL)
	{
		resultado = dividendo/divisor;
		(*resultadoOperacion) = resultado;
		rtn = 1;
	}

	return rtn;
}
int operations_RuleOfThree (float numero1, float numero2, float divisor, float* resultadoOperacion)
{

	float resultado;
	float resultadoDos;
	int rtn = 0;

	if(divisor!=0 && resultadoOperacion!=NULL)
	{
		if(operations_Mulptiply(numero1, numero2, &resultado)==1)
		{
			if(operations_Split(resultado, divisor, &resultadoDos)==1)
			{
				(*resultadoOperacion)=resultadoDos;
				rtn = 1;

			}
		}

	return rtn;
}
int operations_CalcPriceVarations(float precioIngresado, int variacionPrecio, char mensajeError[], float* precioConDescuento)
{
	int rtn;
	float variablePrecio;

	if(precioConDescuento!=NULL && mensajeError!=NULL)
	{
		operations_RuleOfThree(precioIngresado, variacionPrecio, 100, &variablePrecio);
		*precioConDescuento = precioIngresado + variablePrecio;
		rtn=1;
	}
	else
	{
		printf("\n%s", mensajeError);
		rtn=0;
	}
	return rtn;
}
int operations_ExchangeRate(float monedaUno, float monedaDos, float* resultadoOperacion)
{
	int rtn =0;
	float auxiliarTasa;
	if(monedaUno>0 && monedaDos >0)
	{
		operations_Split(monedaUno, monedaDos, &auxiliarTasa);
		*resultadoOperacion=auxiliarTasa;
		rtn=1;
	}
	return rtn;
}
